@model List<Team>

@{
    ViewData["Title"] = "Index";
}
    
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h1>Team list</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a asp-controller="Home" asp-action="AddTeam">Create new</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Position</th>
                        <th scope="col">Image</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Position</td>
                        <td><img src="~/Uploads/Images/@item.Image" alt="image" width="100" /></td>
                        <td>
                            <a asp-controller="Home" asp-action="update" asp-route-id="@item.Id">Update</a>
                            <a onclick="return confirm('Are you sure?')" asp-controller="Home" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>